<div class="col-md-4 col-md-offset-4">
  <h2>修整河流</h2>
  <hr>
  <%= form_for @group do |f| %>

  <% if @group.errors.any? %>
  <ul>
    <% @group.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

    河名
  <%= f.text_field :title %>
  <br>
    流域
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "开工", :disable_with => '施工中……'%>
  <% end %>
</div>
