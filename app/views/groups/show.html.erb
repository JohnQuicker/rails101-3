<div class="col-md-12">
  <div class="group">
    <span class = "pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class = "label label-success"> 流域之民 </label>
      <% else %>
        <label class = "label label-warning"> 不速之客 </label>
      <% end %>
    </span>
    <%= link_to("放条鱼", new_group_post_path(@group), class: "btn btn-default pull-right")%>
    <% if current_user && current_user == @group.user %>
      <%= link_to("治河", edit_group_path(@group), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>
  <h2> <%= @group.title %> </h2>
  <p> <%= @group.description %> </p>
  <table class = "table">
    <thead>
      <tr>
        <th>什么鱼</th>
        <th>投放者</th>
        <th>入水时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
