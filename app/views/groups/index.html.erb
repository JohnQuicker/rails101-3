<div class="col-md-16">
  <div class="group">
    <%= link_to("开新河", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>河名</td>
        <td>流域</td>
        <td>开凿者</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(group.title, group_path(group)) %> </td>
        <td> <%= simple_format(group.description) %> </td>
        <td> <%= group.user.email %> </td>
        <td>
          <% if current_user && current_user == group.user %>
            <%= link_to("治河", edit_group_path(group), class: "btn btn-sm btn-default") %>
            <%= link_to("填平", group_path(group), class: "btn btn-sm btn-default",
              method: :delete, data: {confirm: "你真要干？"}) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
